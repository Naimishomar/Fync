{
  "expo": {
    "name": "Fync",
    "slug": "fync-app",
    "version": "1.0.0",
    "icon": "./assets/square_logo.png",
    "experiments": {
      "tsconfigPaths": true
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone for interview answers."
        }
      ],
      "expo-font",
      "expo-router"
    ],
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/square_logo.png",
        "backgroundColor": "#000"
      },
      "package": "com.anonymous.client"
    }
  }
}
